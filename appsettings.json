{
  "ConnectionStrings": {
  "DefaultConnection": "Server=localhost,1433;Database=SmartAPI;User Id=sa;Password=YourStrong!Passw0rd;TrustServerCertificate=True;"
},
  "JwtSettings": {
    "SecretKey": "ThisIsAVerySecureSecretKeyThatShouldBeAtLeast256BitsLong!@#$%^&*()",
    "Issuer": "SmartAPI",
    "Audience": "SmartAPI-Users",
    "TokenExpirationInMinutes": 15,
    "RefreshTokenExpirationInDays": 7
  },
  "Redis": {
    "ConnectionString": "localhost:6379"
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.File"],
    "MinimumLevel": "Information",
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "File",
        "Args": {
          "path": "Logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "fileSizeLimitBytes": 10485760,
          "rollOnFileSizeLimit": true
        }
      }
    ],
    "Properties": {
      "Application": "SmartAPI"
    }
  },
  "AllowedHosts": "*"
}
